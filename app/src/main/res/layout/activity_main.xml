<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dh.sx520.MainActivity">

    <TextView
        android:id="@+id/tvHelloWorld"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello World!"/>
    <Button
        android:id="@+id/btn_feature1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHelloWorld"
        android:layout_centerHorizontal="true"
        android:text="function1"/>
    <Button
        android:id="@+id/btn_feature2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_feature1"
        android:layout_centerHorizontal="true"
        android:text="function2"/>
    <Button
        android:id="@+id/btn_feature3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_feature2"
        android:layout_centerHorizontal="true"
        android:text="function3"/>

</RelativeLayout>
